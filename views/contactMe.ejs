<%- include("partials/header.ejs") %>

<section class="aboutMe bg-secondary-subtle">
  <div class="bg-secondary-subtle" id="contactMe">
    <h2 class="text-center">Let's Get in Touch 🙋‍♂️</h2>
    <form action="/mail" method="post" class="row px-3">
      <div class="col-md-6 mb-4">
        <label for="contactEmail" class="form-label">Email</label>
        <input
          type="email"
          name="contactEmail"
          id="contactEmail"
          class="form-control"
        />
      </div>
      <div class="col-md-6 mb-4">
        <label for="contactName" class="form-label ms-1">Name</label>
        <input
          type="text"
          name="contactName"
          id="contactName"
          class="form-control"
        />
      </div>
      <div>
        <label for="textMessage" class="form-label ms-1">Message</label>
        <textarea
          name="textMessage"
          id="textMessage"
          placeholder="Write a message for me!"
          class="form-control"
        ></textarea>
      </div>
      <a
        type="submit"
        href="mailto:abdelrahmanshear@gmail.com? subject=<%= mail.text %>"
        class="btn btn-success mt-4 ms-3"
      >
        Send a message
      </a>
    </form>
  </div>
</section>

<%- include("partials/footer.ejs") %>

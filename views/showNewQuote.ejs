<%- include("partials/header.ejs") %>

<section class="bg-secondary-subtle" height="100%">
  <h1 class="mb-1 display-4 text-emphasis-primary"><%= quoteView.genere %></h1>
  <p class="text-muted fs-4"><%= quoteView.date %></p>
  <figure class="my-4">
    <blockquote class="blockquote">
      <p class="fs-2"><%= quoteView.quoteBody %></p>
    </blockquote>
    <cite title="Source Title" class="fs-3 ms-5 text-body-secondary"
      ><%= quoteView.author %></cite
    >
  </figure>
  <div class="mt-4 ms-2">
    <a href="/blog.ejs" class="btn btn-primary">All blogs</a>
    <a href="/blog.ejs/edit/<%= quoteView.id %>" class="btn btn-secondary"
      >Edit</a
    >
  </div>
</section>

<%- include("partials/footer.ejs") %>
